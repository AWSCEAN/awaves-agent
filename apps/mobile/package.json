{
  "name": "mobile",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:web": "cross-env CAPACITOR_BUILD=true NEXT_PUBLIC_API_URL=http://10.0.2.2:8001 pnpm --filter web build",
    "build:web:device": "cross-env CAPACITOR_BUILD=true pnpm --filter web build",
    "sync": "npx cap sync",
    "build": "pnpm build:web && npx cap sync",
    "build:device": "pnpm build:web:device && npx cap sync",
    "dev:android": "npx cap open android",
    "dev:ios": "npx cap open ios",
    "run:android": "npx cap run android",
    "run:ios": "npx cap run ios"
  },
  "dependencies": {
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@capacitor/geolocation": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/app": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "cross-env": "^7.0.3"
  }
}
